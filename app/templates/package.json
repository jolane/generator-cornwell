{
  "name": "<%= appname %>",
  "version": "1.0.0",
  "author": "<%= authorname %> <<%= authoremail %>>",
  "description": "<%= appdesc %>",
  "main": "index.html",
  "scripts": {
    "prewatch:stylus": "mkdir -p _site/assets/css",
    "watch:stylus": "stylus --include-css --watch --sourcemap-inline --use rupture --out _site/assets/css/main.css _assets/stylus/",
    "prebuild:stylus": "mkdir -p assets/css",
    "build:stylus": "stylus --include-css --use rupture --out assets/css/main.css _assets/stylus/",
    "postbuild:stylus": "postcss --use autoprefixer --use cssnano --use postcss-object-fit-images --no-map -o assets/css/main.css assets/css/main.css",
    "watch:images": "chokidar '_assets/images/*.*' -c 'imagemin _assets/images/* --out-dir=_site/assets/images'",
    "build:images": "imagemin _assets/images/* --out-dir=assets/images",
    "watch:svg": "chokidar '_assets/svgs/*.svg' -c 'npm run svg'",
    "build:svg": "npm run svg",
    "presvg": "mkdir -p __svgtempfolder__ && svgo -f _assets/svgs -o __svgtempfolder__",
    "svg": "svg-sprite --config svg-sprite.json __svgtempfolder__/*.svg",
    "postsvg": "rimraf __svgtempfolder__",
    "watch:webpack": "npm run webpack -- -w --devtool eval-cheap-module-source-map --debug --output-path _site/assets/js",
    "build:webpack": "npm run webpack -- -p",
    "webpack": "webpack --config webpack.config.js",
    "jsvendor": "mkdir -p assets/js/vendor && cp _assets/js/vendor/*.js assets/js/vendor",
    "prefonts": "mkdir -p assets/css/fonts",
    "fonts": "cp _assets/fonts/* assets/css/fonts",
    "watch:fonts": "chokidar '_assets/fonts/*.*' -c 'npm run fonts'",
    "build:fonts": "npm run fonts",
    "watch:jekyll": "bundle exec jekyll build --baseurl='' --watch",
    "build": "npm-run-all build:* jsvendor",
    "prestart": "npm-run-all build:images jsvendor fonts svg",
    "start": "npm-run-all --parallel  watch:* server",
    "server": "browser-sync start --logLevel 'silent' --reload-delay 400 --server '_site' --files '_site'",
    "test:stylus": "stylint _assets/stylus",
    "test:js": "jshint _assets/js",
    "test": "npm-run-all test:*"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "6.7.7",
    "babel-core": "6.24.1",
    "babel-loader": "6.4.1",
    "babel-preset-env": "1.4.0",
    "browser-sync": "2.18.8",
    "chokidar-cli": "1.2.0",
    "cssnano": "3.10.0",
    "imagemin-cli": "3.0.0",
    "jshint": "2.9.4",
    "normalize-styl": "4.1.1",
    "npm-run-all": "4.0.2",
    "postcss-cli": "3.2.0",
    "postcss-object-fit-images": "1.1.2",
    "rimraf": "2.6.1",
    "rupture": "0.6.2",
    "style-loader": "0.19.0",
    "stylint": "1.5.9",
    "stylus": "0.54.5",
    "svg-sprite": "1.3.6",
    "webpack": "2.4.1"
  },
  "dependencies": {
  }
}
