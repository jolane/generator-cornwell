{
  "name": "<%= appname %>",
  "version": "1.0.0",
  "author": "<%= authorname %> <<%= authoremail %>>",
  "description": "<%= appdesc %>",
  "main": "index.html",
  "scripts": {
    "prewatch:stylus": "mkdir -p _site/assets/css",
    "watch:stylus": "stylus --watch --sourcemap-inline --use rupture --out _site/assets/css/main.css _assets/stylus/",
    "prebuild:stylus": "mkdir -p assets/css",
    "build:stylus": "stylus --disable-cache -use rupture --out assets/css/main.css _assets/stylus/",
    "prewatch:mages": "mkdir -p _site/assets/images",
    "watch:images": "chokidar '_assets/images/*.*' -c 'npm run images'",
    "prebuild:mages": "mkdir -p assets/images",
    "build:images": "rimraf assets/images/* && npm run images",
    "images": "cp _assets/images/*.* _site/assets/images",
    "watch:svg": "chokidar '_assets/svgs/*.svg' -c 'npm run svg'",
    "build:svg": "npm run svg",
    "svg": "svg-sprite --config _config/svg-sprite.json _assets/svgs/*.svg",
    "watch:webpack": "npm run webpack -- -w --devtool eval-cheap-module-source-map --debug --output-path _site/assets/js",
    "build:webpack": "npm run webpack -- -p",
    "webpack": "webpack --config _config/webpack.config.js",
    "jsvendor": "mkdir -p assets/js/vendor && cp _assets/js/vendor/*.js assets/js/vendor",
    "prefonts": "mkdir -p _site/assets/css/fonts",
    "fonts": "cp _assets/fonts/* _site/assets/css/fonts",
    "watch:fonts": "chokidar '_assets/fonts/*.*' -c 'npm run fonts'",
    "build:fonts": "npm run fonts",
    "watch:jekyll": "jekyll build --baseurl='' --watch",
    "build": "npm-run-all build:* jsvendor",
    "prestart": "npm-run-all jsvendor fonts svg",
    "start": "npm-run-all --parallel  watch:* server",
    "server": "browser-sync start --logLevel 'silent' --reload-delay 400 --server '_site' --files '_site'",
    "build": "npm-run-all build:*",
    "test:stylus": "stylint _assets/stylus",
    "test:js": "jshint _assets/js",
    "test": "npm-run-all test:*"
  },
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "6.7.7",
    "babel-core": "6.24.1",
    "babel-loader": "6.4.1",
    "babel-preset-env": "1.4.0",
    "browser-sync": "2.18.8",
    "chokidar-cli": "1.2.0",
    "jshint": "2.9.4",
    "normalize-styl": "4.1.1",
    "npm-run-all": "4.0.2",
    "rimraf": "2.6.1",
    "rupture": "0.6.2",
    "stylint": "1.5.9",
    "stylus": "0.54.5",
    "svg-sprite": "1.3.6",
    "webpack": "2.4.1"
  },
  "dependencies": {
  }
}
